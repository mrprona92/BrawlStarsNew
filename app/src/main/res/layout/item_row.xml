<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="116dp"
    android:layout_height="wrap_content"
    android:background="?attr/clickableItemBackground"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingLeft="@dimen/half_view_padding"
    android:paddingRight="@dimen/half_view_padding"
    android:paddingTop="@dimen/half_view_padding">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/img"
        android:layout_width="110dp"
        android:layout_height="130dp"
        android:scaleType="centerInside"
        app:riv_corner_radius="3dip"
        android:adjustViewBounds ="false"
        android:layout_gravity="top"
        app:riv_oval="false" />

    <TextView
        android:id="@+id/name"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:lines="2"
        android:singleLine="false"
        android:text="Aghanim's Scepter"
        android:textSize="@dimen/hero_row_textSize"
        android:textStyle="bold" />
</LinearLayout>